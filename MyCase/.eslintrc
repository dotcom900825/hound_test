{
  "env": {
    "jest": true
  },
  "extends": "airbnb",
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "react/forbid-prop-types": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "no-console": ["error", { allow: ["warn", "error", "tron"] }]
  },
  "globals": {
    "Headers": true,
    "fetch": true,
    "__DEV__": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".android.js", ".ios.js"]
      }
    }
  }
}
